<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mid.login.repo.UserDAO">

    <!-- 회원 등록 -->
    <insert id="insertUser" parameterType="com.mid.login.model.UserInfoVO">
        INSERT INTO MEMBER (
            
            mem_name,
            mem_email,
            mem_id,
            mem_pwd,
            mem_addr,
            mem_tel,
            mem_regdate
        ) VALUES (
            
            #{memName},
            #{memEmail},
            #{memId},
            #{memPwd},
            #{memAddr},
            #{memTel},
            SYSDATE
        )
    </insert>

    <resultMap id="userInfoResultMap" type="com.mid.login.model.UserInfoVO">
        <result property="memNo" column="mem_no"/>
        <result property="memName" column="mem_name"/>
        <result property="memEmail" column="mem_email"/>
        <result property="memId" column="mem_id"/>
        <result property="memPwd" column="mem_pwd"/>
        <result property="memAddr" column="mem_addr"/>
        <result property="memTel" column="mem_tel"/>
        <result property="memRegdate" column="mem_regdate"/>
    </resultMap>

    <!-- 나머지 부분은 그대로 유지 -->
    <select id="getUserInfo" resultMap="userInfoResultMap">
        SELECT 
            mem_no,
            mem_name,
            mem_email,
            mem_id,
            mem_pwd,
            mem_addr,
            mem_tel,
            mem_regdate
        FROM MEMBER
        WHERE mem_id = #{memId}
        AND mem_pwd = #{memPwd}
    </select>
	
	<!-- 아이디 중복 체크 -->
    <select id="idCheck" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM MEMBER
        WHERE mem_id = #{memId}
    </select>

    <!-- 마지막 로그인 날짜 업데이트 -->
   <!--  <update id="updateLastLogin" parameterType="string">
        UPDATE USER_INFO
        SET LAST_LOGIN = SYSDATE
        WHERE USER_ID = #{userId}
    </update> -->

</mapper>
